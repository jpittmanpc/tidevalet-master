<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light">
        <!-- Customize your theme here. -->

    </style>
    <style name="AppTheme.white">
        <item name="colorControlNormal">#ffffff</item>
        <item name="colorControlActivated">#ffffff</item>
        <item name="colorControlHighlight">#ffffff</item>
    </style>
    <style name="AppTheme.NoTitle">
        <item name="android:windowNoTitle">true</item>
        <!-- Support library compatibility -->
        <item name="windowActionBar">false</item>
    </style>
    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
        <style name="LargeText" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/TideBlue</item>
        <item name="android:textSize">22dip</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="TideValet" parent="Theme.AppCompat.Light.DarkActionBar" >
        <item name="actionBarTheme">@style/Actionbar</item>
        <item name="colorPrimary">@color/TideBlue</item>
        <item name="colorPrimaryDark">@color/TideBlueDark</item>
        <item name="colorAccent">#7ea538</item>
        <item name="android:colorBackground">#ffffff</item>
        <item name="android:colorForeground">#757571</item>
        <item name="android:textColorPrimary">@color/TideBlue</item>
        <item name="android:textColorPrimaryInverse">@android:color/black</item>
        <item name="android:textColorSecondary">@color/TideBlue</item>
        <item name="android:textColorSecondaryInverse">@color/TideLightGrey</item>
        <item name="android:windowBackground">@color/TideBlue</item>
        <item name="android:windowContentTransitions">true</item>
        <item name="android:windowEnterTransition">@transition/change_image_transform</item>
        <item name="android:windowExitTransition">@transition/change_image_transform</item>
        <!-- specify shared element transitions -->
        <item name="android:windowSharedElementEnterTransition">
            @transition/change_image_transform</item>
        <item name="android:windowSharedElementExitTransition">
            @transition/change_image_transform</item>
    </style>
    <style name="Actionbar" parent="Platform.ThemeOverlay.AppCompat.Dark">
        <item name="android:windowBackground">@android:color/white</item>
        <item name="android:colorForeground">@color/white</item>
        <item name="android:colorForegroundInverse">@android:color/primary_text_light</item>
        <item name="android:colorBackground">@color/TideBlue</item>
        <item name="android:colorBackgroundCacheHint">@android:color/white</item>

        <item name="android:textColorPrimary">@android:color/white</item>
        <item name="android:textColorPrimaryInverse">@android:color/primary_text_light</item>
        <item name="android:textColorPrimaryDisableOnly">@android:color/primary_text_dark_nodisable</item>
        <item name="android:textColorSecondary">@android:color/primary_text_dark</item>
        <item name="android:textColorSecondaryInverse">@android:color/primary_text_light</item>
        <item name="android:textColorTertiary">@android:color/tertiary_text_light</item>
        <item name="android:textColorTertiaryInverse">@android:color/tertiary_text_dark</item>
        <item name="android:textColorHint">@android:color/holo_blue_dark</item>
        <item name="android:textColorHintInverse">@android:color/secondary_text_light</item>
        <item name="android:textColorHighlight">@android:color/darker_gray</item>

        <item name="colorControlNormal">?android:attr/textColorSecondary</item>
        <item name="colorControlHighlight">@android:color/primary_text_dark</item>
        <item name="colorButtonNormal">@android:color/primary_text_dark</item>
        <item name="colorSwitchThumbNormal">@color/TideBlue</item>
    </style>
    <style name="checkBoxStyle" parent="Widget.AppCompat.Button">
        <item name="colorControlActivated">@color/TideBlue</item>
        <item name="colorControlNormal">@color/dkgrey</item>
        <item name="backgroundTint">@color/TideBlue</item>
    </style>
    <color name="TideBlue">#272262</color>
    <color name="TideBlueDark">#180e51</color>
    <color name="white">#ffffff</color>

    <style name="FlatButton" parent="Theme.AppCompat.Light">
        <item name="colorControlHighlight">#272262</item>
    </style>

    <style name="TextLabel" parent="TextAppearance.AppCompat">
        <item name="android:textColorHint">@android:color/white</item>
        <item name="colorAccent">@android:color/white</item>
        <item name="colorControlNormal">@android:color/white</item>
        <item name="colorControlActivated">@android:color/white</item>
        <item name="android:textColorPrimary">@android:color/white</item>
        <item name="android:textColorSecondary">@android:color/white</item>
    </style>

    <style name="Material_Headline">
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">#444</item>
    </style>

    <style name="Material_Card_Title" parent="Material_Headline">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_vertical|left</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:paddingTop">16dp</item>
        <item name="android:paddingBottom">12dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/TideBlueDark</item>
    </style>

    <style name="Material_Subhead">
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#777</item>
    </style>

    <style name="Material_Body1">
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="Material_Card_Title_Image" parent="Material_Card_Title">
        <item name="android:paddingTop">16dp</item>
        <item name="android:paddingBottom">6dp</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="Material_Card_Subtitle_24dp" parent="Material_Subhead">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center_vertical|left</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:paddingBottom">24dp</item>
    </style>

    <style name="Material_Card_Subtitle_16dp" parent="Material_Card_Subtitle_24dp">
        <item name="android:paddingBottom">12dp</item>
    </style>

    <style name="Material_Card_Subtitle_Image" parent="Material_Card_Subtitle_16dp">
        <item name="android:textSize">14sp</item>
    </style>

    <!-- Should be used if there are no actions -->
    <style name="Material_Card_Supporting_Text_24dp" parent="Material_Body1">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>

        <item name="android:gravity">center_vertical|left</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:paddingBottom">24dp</item>
    </style>

    <!-- Should be used if there are additional actions or supporting text -->
    <style name="Material_Card_Supporting_Text_16dp" parent="Material_Card_Supporting_Text_24dp">
        <item name="android:paddingBottom">16dp</item>
    </style>

    <style name="Material_Action" parent="@style/Base.TextAppearance.AppCompat.Button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">36dp</item>
        <item name="android:minWidth">88dp</item>
        <item name="android:padding">8dp</item>
        <item name="android:buttonStyle">@style/Base.Widget.AppCompat.Button</item>
        <item name="android:background">?attr/selectableItemBackground</item>
    </style>



</resources>

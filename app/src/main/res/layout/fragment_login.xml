<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:showIn="@layout/activity_login"
    tools:context="com.tidevalet.LoginActivityFragment$PlaceholderFragment"
    android:background="@drawable/loginloginwallpaper" >

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:src="@drawable/logotide_logo" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/logintext"
        android:layout_above="@+id/editUsername"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignLeft="@+id/editUsername"
        android:layout_alignStart="@+id/editUsername" />
    <EditText
        android:theme="@style/AppTheme.white"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editUsername"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:hint="Username"
        android:textColor="#ffffff"
        android:textColorHint="#9d9d9d"
        android:paddingBottom="@dimen/abc_edit_text_inset_bottom_material"
        android:paddingTop="@dimen/abc_edit_text_inset_top_material" />

    <EditText
        android:theme="@style/AppTheme.white"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/editPassword"
        android:layout_below="@+id/editUsername"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:hint="Password"
        android:textColor="#ffffff"
        android:textColorHint="#9d9d9d"
        android:paddingBottom="@dimen/abc_edit_text_inset_bottom_material"
        android:paddingTop="@dimen/abc_edit_text_inset_top_material" />
    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editPassword"
        android:buttonTint="#ffffff"
        android:text="Remember Me"
        android:textColor="#ffffff"
        android:id="@+id/rememberCheckbox" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="LOGIN"
        android:id="@+id/loginButton"
        android:layout_below="@+id/rememberCheckbox"
        android:layout_margin="@dimen/activity_horizontal_margin"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:elevation="2dp"
        android:background="#272262"
        android:textColor="#ffffff" />

</RelativeLayout>

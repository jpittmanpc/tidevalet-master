<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Please select the violation\n from the options below."
        android:textAppearance="@style/LargeText"
        android:id="@+id/violation_type_text_top"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_weight="0.22"
        android:textAlignment="center"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="51dp" />


    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Not Tied"
        android:id="@+id/cb1"
        android:layout_marginBottom="52dp"
        android:layout_above="@+id/checkBox3"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Not Tied"
        android:id="@+id/checkBox"
        android:layout_alignTop="@+id/cb1"
        android:layout_centerHorizontal="true" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Not Tied"
        android:id="@+id/checkBox2"
        android:layout_alignTop="@+id/checkBox4"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Not Tied"
        android:id="@+id/checkBox3"
        android:layout_alignTop="@+id/checkBox5"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Not Tied"
        android:layout_marginTop="5dp"
        android:id="@+id/checkBox4"
        android:layout_below="@+id/checkBox"
        android:layout_marginBottom="5dp"
        android:layout_alignLeft="@+id/checkBox"
        android:layout_alignStart="@+id/checkBox" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Not Tied"
        android:id="@+id/checkBox5"
        android:layout_below="@+id/violation_type_text_top"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="169dp" />


</RelativeLayout>
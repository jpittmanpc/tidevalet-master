<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.PropertyList$PlaceholderFragment"
    app:layout_behavior="@string/appbar_scrolling_view_behavior" >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/editText"
        android:text="@string/found_complex"
        android:textColor="#272262"
        android:textAppearance="@style/LargeText"
        android:layout_below="@+id/topText"
        android:layout_margin="@dimen/abc_text_size_display_2_material" />
    <ListView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editText"
        android:id="@+id/listView"
        android:layout_centerHorizontal="true"
        android:entries="@color/wallet_bright_foreground_holo_dark"
        android:divider="#1c1c1c"
        android:layout_margin="@dimen/activity_horizontal_margin" />
    <TextView android:id="@+id/topText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#000000"
        android:gravity="center" />
    <TextView android:id="@+id/bottomText"
        android:layout_height="wrap_content"
        android:textColor="#000000"
        android:layout_width="wrap_content" />

    <ProgressBar
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/progressBar"
        android:progressDrawable="@drawable/spincircle"
        android:layout_below="@+id/editText"
        android:layout_centerHorizontal="true"
        android:visibility="gone"
        android:indeterminate="false" />


</RelativeLayout>